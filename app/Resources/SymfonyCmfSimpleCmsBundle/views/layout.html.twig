<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content=" minimum-scale=1.0, maximum-scale=1.0, width=device-width; user-scalable=no">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>{% block title %}{{ title|default('Simple CMS')|striptags }}{% endblock %}</title>

    {% block includes %}
        <link href="{{ asset('bundles/acmemain/bootstrap/css/bootstrap.css') }}" type="text/css" rel="stylesheet"/>
        <link href="{{ asset('bundles/acmemain/bootstrap/css/bootstrap-responsive.css') }}" type="text/css" rel="stylesheet"/>
        <link href="{{ asset('bundles/acmemain/css/style.css') }}" type="text/css" rel="stylesheet"/>

        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    {% endblock %}
</head>
<body>
<div class="container">

    <div id="top" class="row">
        <div class="span12">
            <ul id="skiplinks" class="pull-left hidden-desktop">
                <li><a href="#content" title="Go to main content">Skip to content</a></li>
                <li><a href="#navigation" title="go to navigation">Skip to navigation</a></li>
            </ul>
        </div>
        <div id="language_selector" class="pull-right">
            {% block language_selector %}
                {% if page is defined %}
                    {{ locale_switcher('', {content: page}) }}
                {% endif %}
            {% endblock %}
        </div>
    </div>

    <div class="row">
        <div id="banner" class="span12">
            <a href="https://github.com/symfony-cmf/symfony-cmf-standard"><img style="position: absolute; top: 0; right: 0; border: 0;" src="http://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"/></a>

            <div class="hero-unit">
                <h1 id="logo-text"><a href="{{ path('', {'content_id': '/cms/simple'}) }}">Standard Edition</a></h1>

                <p id="slogan">Symfony2 Content Management Framework</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div id="content-container" class="span12 boxed">
            <div class="row">
                <div id="navigation" class="span3">
                    <div class="well">
                        {% block navigation %}
                            <h2>Navigation</h2>
                            {{ knp_menu_render('simple') }}
                        {% endblock %}
                    </div>
                </div>
                <div class="span9">
                    <div id="content">
                        <div class="inner">
                            {% block content %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>

